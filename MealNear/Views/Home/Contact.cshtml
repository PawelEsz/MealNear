@{
    ViewBag.Title = "Contact";
}
<h2>@ViewBag.Title.</h2>
<h3>@ViewBag.Message</h3>

<address>
    One Microsoft Way<br />
    Redmond, WA 98052-6399<br />
    <abbr title="Phone">P:</abbr>
    425.555.0100
</address>

<address>
    <strong>Support:</strong>   <a href="mailto:Support@example.com">Support@example.com</a><br />
    <strong>Marketing:</strong> <a href="mailto:Marketing@example.com">Marketing@example.com</a>
</address>

<form action="SendContactInfo" method="post">
    <table>
        <tr>
            <td>Name: </td>
            <td><input id="Name" name="Name" type="text" value="" required="required" /></td>
        </tr>
        <tr>
            <td>Email: </td>
            <td><input id="Email" name="Email" type="text" value="" required="required" /></td>
        </tr>
        <tr>
            <td>Title: </td>
            <td><input id="Title" name="Title" type="text" value="" required="required" /></td>
        </tr>
        <tr>
            <td>Text: </td>
            <td><textarea id="Text" name="Text" cols="50" rows="10" required="required">Treść wiadomości...</textarea></td>
        </tr>
        <tr>
            <td></td>
            <td><input type="submit" value="Wyślij" /></td>
        </tr>
    </table>
</form>

@if (ViewBag.SendSuccess == true)
{
    <span>Zgłoszenie zostało wysłane.</span>
}